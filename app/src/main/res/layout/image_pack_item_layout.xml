<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/image_pack_image"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/image_pack_remove"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:text="@string/image_pack_remove_string" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/image_pack_edit"
        android:layout_toLeftOf="@id/image_pack_remove"
        android:layout_centerInParent="true"
        android:text="@string/image_pack_edit_string" />

</RelativeLayout>